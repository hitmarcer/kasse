<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonNamesStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:width">230dp</item>
        <item name="android:height">230dp</item>
        <item name="android:insetBottom">10dp</item>
        <item name="android:insetTop">10dp</item>
        <item name="android:insetLeft">10dp</item>
        <item name="android:insetRight">10dp</item>
        <item name="android:backgroundTint">@color/buttongreen</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">normal</item>
        <item name="layout_editor_absoluteY">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="mainButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="headlineStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
</resources>